<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:title="设置"
        app:titleStyle="bold"
        app:titleColor="@color/black"
        app:lineVisible="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                android:background="@drawable/bg_large_round_gray">

                <LinearLayout
                    android:id="@+id/llHomeRec"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主页内容"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvHomeRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/showFastSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聚合模式"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/showFastSearchText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主题颜色"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLiveApi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="直播源"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPrivateBrowsing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无痕浏览"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchPrivateBrowsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_large_round_gray">
                <LinearLayout
                    android:id="@+id/llPlay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="播放器"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVideoPurify"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广告过滤"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVideoPurify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPressSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长按倍速"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBackgroundPlay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="后台播放"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvBackgroundPlayType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMediaCodec"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IJK解码方式"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvMediaCodec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llRender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="渲染方式"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvRenderType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llScale"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="画面缩放"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvScaleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llIjkCachePlay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IJK缓存"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchIjkCachePlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_large_round_gray">

                <LinearLayout
                    android:id="@+id/llBackup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数据备份还原"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llDns"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安全DNS"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvDns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llHistoryNum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史记录"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvHistoryNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llClearCache"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp"
                    android:foreground="?android:selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空缓存"
                        android:textColor="@color/text_foreground"
                        android:textSize="16sp"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:alpha="0.75"
                        android:src="@drawable/icon_pre"
                        app:tint="@color/text_foreground"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>